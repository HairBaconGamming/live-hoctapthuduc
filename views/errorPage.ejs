<%# File: views/errorPage.ejs %>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lỗi | Nền Tảng Học Tập</title>
  <link rel="icon" type="image/png" href="https://cdn.glitch.global/71030012-56ea-4d26-a426-e0099201df1c/823029_library_512x512.png?v=1741523759119">
    <link rel="stylesheet" href="/styles.css"> <%# Global styles %>
    <style>
        body {
            font-family: var(--font-main, 'Poppins', sans-serif);
            background-color: var(--bg-dark, #12121f);
            color: var(--text-light, #f0f0f0);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            text-align: center;
            padding: 20px;
        }
        .error-container {
            background-color: var(--bg-card-dark, rgba(30,30,50,0.8));
            padding: 30px 40px;
            border-radius: var(--border-radius-large, 20px);
            box-shadow: var(--shadow-dark, 0 10px 30px rgba(0,0,0,0.2));
        }
        .error-container h1 {
            font-family: var(--font-heading, 'Montserrat', sans-serif);
            color: var(--danger-color, #F44336);
            font-size: 2.5rem;
            margin-bottom: 15px;
        }
        .error-container p {
            font-size: 1.1rem;
            color: var(--text-medium, #a0a0c0);
            margin-bottom: 25px;
        }
        .error-container a.btn {
            padding: 12px 25px;
            background-color: var(--primary-color, #7873f5);
            color: white;
            text-decoration: none;
            border-radius: var(--border-radius-medium, 10px);
            font-weight: 500;
            transition: background-color 0.3s ease;
        }
        .error-container a.btn:hover {
            background-color: var(--secondary-color, #ff6ec4);
        }
    </style>
</head>
<body>
    <div class="error-container">
        <h1><i class="fas fa-exclamation-triangle"></i> Oops! Đã có lỗi xảy ra</h1>
        <p><%= message %></p>
        <a href="<%= projectUrl %>/live" class="btn">Quay lại trang Live</a>
    </div>
</body>
</html>